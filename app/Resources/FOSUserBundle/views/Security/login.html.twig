{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div id="loginPage" ng-controller="LoginCtrl">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
                <div class="alert alert-danger" role="alert" ng-show="formErrors.length">
                    <ul><li ng-repeat="errorMsg in formErrors">[[errorMsg]]</li></ul>
                </div>

                <form ng-submit="submit()" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="form-group">
                        <input ng-init="userdata._csrf_token='{{ csrf_token }}'" value="{{ csrf_token }}"
                           name="_csrf_token" type="hidden" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input ng-model="userdata._username" value="{{ last_username }}"
                           type="text" id="username" class="form-control" name="_username" required="required" autofocus
                           placeholder={{ 'security.login.username'|trans() }} />
                    </div>

                    <div class="form-group">
                        <input ng-model="userdata._password"
                           type="password" id="password" class="form-control" name="_password"
                           required="required" placeholder={{ 'security.login.password'|trans() }} />
                    </div>

                    {#<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>#}

                    {#<input ng-model="userdata.remember" type="checkbox" id="remember_me" #}
                           {#class="form-control" name="_remember_me" value="on" />#}
                    <div class="form-group">
                        <input type="submit" value="{{ 'security.login.submit'|trans }}" id="_submit" name="_submit"
                           class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
