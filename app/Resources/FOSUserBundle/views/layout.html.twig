{% extends '::base.html.twig' %}
{% trans_default_domain "messages" %}
{% block title %}Admino Login{% endblock %}


{% block stylesheets %}
    {% stylesheets filter='cssrewrite'
        'vendor/jquery-ui/themes/smoothness/jquery-ui.min.css'
        'vendor/bootstrap/dist/css/bootstrap.min.css'
        '../app/Resources/public/css/app.css'
        'bundles/barraback/css/login.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
        'vendor/jquery/dist/jquery.min.js'
        'vendor/jquery-ui/jquery-ui.min.js'
        'vendor/lodash/dist/lodash.min.js'
        'vendor/angular/angular.min.js'
        'vendor/restangular/dist/restangular.min.js'
        'bundles/fosjsrouting/js/router.js'
        'bundles/barraback/js/app.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {# controller generated JS file. include in assetic would require a manual dump every time a route changes #}
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}


{% block section %}
    <section class="container">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div>{% block fos_user_content %}{% endblock fos_user_content %}</div>
    </section>
{% endblock %}