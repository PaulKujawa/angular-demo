<!DOCTYPE html>
{% set locale = app.request.locale %}
<html lang="{{ locale }}">
    <head>
        {% block head %}
            <title>{% block title %}Kujawa{% endblock %}</title>
            {% block metaData %}
                <meta http-equiv="X-UA-Compatible" content="IE=edge">
                <meta http-equiv="content-type" content="text/html; charset=utf-8">
                <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
                <meta name="language" content="{{ locale }}">
                <meta name="author" content="Paul Kujawa">
                <meta name="copyright" content="Paul Kujawa">
                <meta name="publisher" content="Paul Kujawa">
                <meta name="description" content="vegan recipes with high calories">
                <meta name="keywords" content="vegan, vegetarian, recipe, calories">
                <base href="{{ path('app_root_i18n') }}">
            {% endblock %}

            {% if app.environment != 'test' %}
                <link rel="stylesheet" href="{{ asset('css/main.css') }}">
            {% endif %}
        {% endblock %}
    </head>

    <body>
        <spa></spa>
        {# TODO try accessing <base href> instead #}
        <script>
            window.appInject = {
                baseUrl: {{ app.request.baseUrl|json_encode|raw }},
                requestLocale: {{ locale|json_encode|raw }},
                authenticated: {{ app.user ? 1 : 0 }}
            };
        </script>
        <script src="{{ asset('js/vendor.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
    </body>
</html>
