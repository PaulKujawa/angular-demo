<!DOCTYPE html>
{% set locale = app.request.locale %}
<html lang="{{ locale }}">
    <head>
        {% block head %}
            <title>{% block title %}Kujawa{% endblock %}</title>
            {% block metaData %}
                <meta http-equiv="X-UA-Compatible" content="IE=edge">
                <meta http-equiv="content-type" content="text/html; charset=utf-8">
                <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
                <meta name="language" content="{{ locale }}">
                <meta name="author" content="Paul Kujawa">
                <meta name="copyright" content="Paul Kujawa">
                <meta name="publisher" content="Paul Kujawa">
                <meta name="description" content="vegan recipes with high calories">
                <meta name="keywords" content="vegan, vegetarian, recipe, calories">
                <base href="{{ path('app_root_i18n') }}">
            {% endblock %}

            {% if app.environment != 'test' %}
                <link rel="stylesheet" href="{{ asset('css/main.css') }}">
                <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
            {% endif %}

            <link rel="preload" as="script" href="{{ asset('js/bundle/vendor.js') }}">
            <link rel="preload" as="script" href="{{ asset('js/bundle/main.js') }}">
        {% endblock %}
    </head>

    <body class="mat-app-background">
        <app-spa></app-spa>
        <script>
            window.appInject = {
                baseUrl: {{ path('app_root_i18n')|json_encode|raw }},
                requestLocale: {{ locale|json_encode|raw }},
                authenticated: {{ app.user ? 'true' : 'false' }}
            };
        </script>
        <script src="{{ asset('js/bundle/vendor.js') }}"></script>
        <script src="{{ asset('js/bundle/main.js') }}"></script>
    </body>
</html>
