  "scripts": {
    "build:dev": "npm run prepare-assets && npm run webpack:dev",
    "build:prod": "npm run prepare-assets && npm run webpack:prod",
    "prepare-assets": "composer install && npm install && npm run symfony:exposure",
    "symfony:exposure": "npm run symfony:link && npm run symfony:routes && npm run symfony:trans",
    "symfony:link": "bin/console assets:install --symlink",
    "symfony:routes": "bin/console fos:js-routing:dump --no-debug --env=prod",
    "symfony:trans": "bin/console bazinga:js-translation:dump --format=js --merge-domains --no-debug --env=prod",
    "webpack:dev": "webpack -w --progress --env.env=dev",
    "webpack:prod": "webpack --bail --progress --env.env=prod --env.analyze=true"
  }
