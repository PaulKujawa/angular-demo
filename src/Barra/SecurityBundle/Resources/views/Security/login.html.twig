{% extends 'BarraSecurityBundle::layout.html.twig' %}
{% trans_default_domain "messages" %}

{% block title %}{{ 'security.title.login'|trans() }}{% endblock %}

{% block section %}
    <section class="container">
        {% if error %}
            <div>{{ error.message }}</div>
        {% endif %}
        <form id="loginForm" action="{{ path('barra_security_login_check') }}" method="post">
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder={{ 'security.word.name'|trans() }} autofocus />
            <input type="password" id="password" class="form-control" name="_password" required="required" placeholder={{ 'security.word.password'|trans() }} />
            <input type="hidden" class="form-control" name="_csrf_token" value="{{ csrf_token('loginToken') }}">
            <button type="submit" class="btn btn-default btn-block">{{ 'security.action.login'|trans() }}</button>
        </form>
    </section>
{% endblock %}