{% extends 'BarraAdminBundle::layout.html.twig' %}
{% trans_default_domain "messages" %}
{% block title %}{{ 'admin.title.recipes'|trans() }} | Kujawa{% endblock %}
{% block metaData %}
    <meta name="description" content="Vegan {{ 'admin.title.recipes'|trans() }}" />
    <meta name="keywords" content="{{ 'admin.meta.recipeKeywords'|trans() }}" />
{% endblock %}


{% block section %}
    <section class="container" id="recipesPage">
        {% for row in recipes|batch(3) %}
            <div class="row">
                {% for recipe in row %}
                    <div class="col-xs-12 col-sm-4">
                        <div class="thumbnail">
                            <a href="{{ path('barra_admin_recipe', {'name': recipe.name|replace({' ': '_'})}) }}">
                                {% if recipe.Photos is not empty %}
                                    <img
                                        src="{{ asset('uploads/documents/'~(recipe.Photos|first).filename) }}"
                                        alt="{{ recipe.name }}"
                                    >
                                {% endif %}
                                <div class="caption">{{ recipe.name }}</div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}

        {{ include('BarraAdminBundle:parts:pagination.html.twig', { 'route': 'barra_admin_recipes'})}}
    </section>
{% endblock %}