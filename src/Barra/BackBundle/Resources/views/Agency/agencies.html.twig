{% extends 'BarraBackBundle::layout.html.twig' %}
{% form_theme form 'BarraBackBundle:Form:tableRow.html.twig' %}
{% block title %}{{ 'back.title.agencies'|trans() }}{% endblock %}

{% block section %}
    <section class="container mobileTables" ng-controller="AgencyCtrl">
        {{ include('BarraBackBundle::formValidation.html.twig') }}

        {{ form_start(form) }}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>{{ 'back.agency.name'|trans() }}</th>
                        <th>{{ 'back.agency.url'|trans() }}</th>
                        <th>{{ 'back.action.delete'|trans() }}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="agency in agencies | orderBy:'name'">
                        <td data-mobile-title={{ 'back.agency.name'|trans() }}>[[agency.name]]</td>
                        <td data-mobile-title={{ 'back.agency.url'|trans() }}>[[agency.url]]</td>
                        <td data-mobile-title={{ 'back.action.delete'|trans() }}>
                            <span class="glyphicon glyphicon-minus" ng-click="deleteEntry(agency)"></span>
                        </td>
                    </tr>
                    <tr class="formInRow">
                        {{ form_row(form.name) }}
                        {{ form_row(form.url) }}
                        {{ form_widget(form.submit, {'label': 'back.action.new', 'attr': {'class': 'btn'} }) }}
                    </tr>
                </tbody>
            </table>
        {{ form_end(form) }}

        {{ include('BarraBackBundle::pagination.html.twig', { 'route': 'barra_back_recipes'}) }}
    </section>
{% endblock %}