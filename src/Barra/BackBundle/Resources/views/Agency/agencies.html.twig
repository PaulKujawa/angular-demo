{% extends 'BarraBackBundle::layout.html.twig' %}
{% form_theme formInsert 'BarraBackBundle:Form:tableRow.html.twig' %}

{% trans_default_domain "messages" %}

{% block title %}{{ 'back.title.agencys'|trans() }}{% endblock %}

{% block section %}
    <section class="container mobileTables">
        {{ form_start(formInsert) }}
            <table class="table table-striped" data-type="agency">
                <thead>
                    <tr>
                        <th>{{ 'back.agency.name'|trans() }}</th>
                        <th>{{ 'back.agency.url'|trans() }}</th>
                        <th>{{ 'back.action.delete'|trans() }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for agency in agencys %}
                        <tr data-id={{ agency.id }}>
                            <td class="editableCell" data-mobile-title={{ 'back.agency.name'|trans() }}>{{ agency.name }}</td>
                            <td class="editableCell" data-mobile-title={{ 'back.agency.url'|trans() }}>{{ agency.url }}</td>
                            <td class="editableCell" data-mobile-title={{ 'back.action.delete'|trans() }}>
                                <a href="{{ path('barra_back_agency_delete', {'id': agency.id}) }}">
                                    <span class="glyphicon glyphicon-minus"></span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    <tr class="formInRow">
                        {{ form_row(formInsert.name) }}
                        {{ form_row(formInsert.url) }}
                        {{ form_widget(formInsert.submit, {'label': 'back.action.new', 'attr': {'class': 'btn'} }) }}
                    </tr>
                    <tr class="formInRowError">
                        <td>
                            {{ form_errors(formInsert) }}
                        </td>
                    </tr>
                </tbody>
            </table>
        {{ form_end(formInsert) }}

