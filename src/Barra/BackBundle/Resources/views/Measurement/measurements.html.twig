{% extends 'BarraBackBundle::layout.html.twig' %}
{% form_theme formInsert 'BarraBackBundle:Form:tableRow.html.twig' %}
{% form_theme formUpdate 'BarraBackBundle:Form:tableRow.html.twig' %}
{% trans_default_domain "messages" %}

{% block title %}{{ 'back.title.measurements'|trans() }}{% endblock %}

{% block section %}
    <section class="container mobileTables">
        {{ form_start(formInsert) }}
            <table class="table table-striped" data-type="measurement">
                <thead>
                    <tr>
                        <th>{{ 'back.measurement.type'|trans() }}</th>
                        <th>{{ 'back.measurement.gr'|trans() }}</th>
                        <th>{{ 'back.action.delete'|trans() }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for measurement in measurements %}
                        <tr data-id={{ measurement.id }}>
                            <td class="editableCell" data-mobile-title={{ 'back.measurement.type'|trans() }}>{{ measurement.type }}</td>
                            <td class="editableCell" data-mobile-title={{ 'back.measurement.gr'|trans() }}>{{ measurement.gr }}</td>
                            <td data-mobile-title={{ 'back.action.delete'|trans() }}>
                                <a {% if measurement.getRecipeIngredients() is empty %} href="{{ path('barra_back_measurement_delete', {'id': measurement.id}) }}"
                                   {% else %}                                           class="inactiveLink" {% endif %} >
                                    <span class="glyphicon glyphicon-minus"></span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    <tr class="formInRow">
                        {{ form_row(formInsert.type) }}
                        {{ form_row(formInsert.gr) }}
                        {{ form_widget(formInsert.submit, {'label': 'back.action.new', 'attr': {'class': 'btn'} }) }}
                    </tr>
                    <tr class="formInRowError">
                        <td>
                            {{ form_errors(formInsert) }}
                        </td>
                    </tr>
                </tbody>
            </table>
        {{ form_end(formInsert) }}

        <table class="jsStorage" data-type="measurement" style="visibility: hidden">
            <tbody>
                {{ form_start(formUpdate, {'action': path('barra_back_measurement_update')}) }}
                <tr class="formInRow">
                    {{ form_row(formUpdate.type) }}
                    {{ form_row(formUpdate.gr) }}
                    {{ form_widget(formUpdate.submit, {'label': 'back.action.update', 'attr': {'class': 'btn'} }) }}
                    {{ form_row(formUpdate.id, {'attr': {'class': 'formPk'} }) }}
                    {{ form_rest(formUpdate) }}
                </tr>
                {{ form_end(formUpdate) }}
            </tbody>
        </table>
    </section>


{% endblock %}