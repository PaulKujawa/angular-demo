{% extends 'BarraBackBundle::layout.html.twig' %}
{% form_theme form 'BarraBackBundle:Form:tableRow.html.twig' %}
{% trans_default_domain "messages" %}

{% block title %}{{ 'back.title.measurements'|trans() }}{% endblock %}

{% block section %}
    <section class="container mobileTables">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ 'back.measurement.type'|trans() }}</th>
                    <th>{{ 'back.measurement.gr'|trans() }}</th>
                    <th>{{ 'back.action.delete'|trans() }}</th>
                </tr>
            </thead>
            <tbody>
                {% for measurement in measurements %}
                    <tr>
                        <td data-mobile-title={{ 'back.measurement.type'|trans() }}>{{ measurement.type }}</td>
                        <td data-mobile-title={{ 'back.measurement.gr'|trans() }}>{{ measurement.gr }}</td>
                        <td data-mobile-title={{ 'back.action.delete'|trans() }}>
                            <a {% if measurement.getRecipeIngredients() is empty %}
                                    href="{{ path('barra_back_measurement_delete', {'id': measurement.id}) }}"
                                {% else %}
                                    class="notDeletable"
                                {% endif %}
                            >
                                <span class="glyphicon glyphicon-minus"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                <tr>
                    {{ form_start(form) }}
                        {{ form_row(form.type) }}
                        {{ form_row(form.gr) }}
                        {{ form_widget(form.submit, {'label': 'back.action.new', 'attr': {'class': 'btn btn-default'} }) }}
                    {{ form_end(form) }}
                </tr>
            </tbody>
        </table>
    </section>
{% endblock %}