{% extends 'BarraBackBundle::layout.html.twig' %}
{% form_theme form 'BarraBackBundle:Form:tableRow.html.twig' %}
{% trans_default_domain "messages" %}

{% block title %} vPit Measurements {% endblock %}

{% block section %}
    <section>
        <table class="table table-striped">
            <tr>
                <th>{{ 'back.word.type'|trans() }}</th>
                <th>{{ 'back.word.gr'|trans() }}</th>
                <th>{{ 'back.word.delete'|trans() }}</th>
            </tr>

            {# TODO set Contextual classes after insert/update/del #}
            {% for measurement in measurements %}
                <tr>
                    <td>{{ measurement.type }}</td>
                    <td>{{ measurement.gr }}</td>
                    <td><a href="{{ path('barra_back_measurement_delete', {'id': measurement.id}) }}"><span class="glyphicon glyphicon-minus"></span></a></td>
                </tr>
            {% endfor %}


            <tr>
                {{ form_start(form) }}
                    {{ form_row(form.type) }}
                    {{ form_row(form.gr) }}
                    {{ form_widget(form.submit, {'label': 'back.action.new', 'attr': {'class': 'btn btn-default btn-block glyphicon glyphicon-plus'} }) }}
                {{ form_end(form) }}
            </tr>
        </table>
    </section>
{% endblock %}