{% extends 'BarraBackBundle::layout.html.twig' %}
{% form_theme formInsert 'BarraBackBundle:Form:tableRow.html.twig' %}
{% form_theme formUpdate 'BarraBackBundle:Form:tableRow.html.twig' %}
{% trans_default_domain "messages" %}

{% block title %}{{ 'back.title.manufacturers'|trans() }}{% endblock %}

{% block section %}
    <section class="container mobileTables">
        {{ form_start(formInsert) }}
            <table class="table table-striped" data-type="manufacturer">
                <thead>
                    <tr>
                        <th>{{ 'back.manufacturer.name'|trans() }}</th>
                        <th>{{ 'back.action.delete'|trans() }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for manufacturer in manufacturers %}
                        <tr data-id={{ manufacturer.id }}>
                            <td class="editableCell" data-mobile-title={{ 'back.manufacturer.name'|trans() }}>{{ manufacturer.name }}</td>
                            <td data-mobile-title={{ 'back.action.delete'|trans() }}>
                                <a {% if manufacturer.products is empty %} href="{{ path('barra_back_manufacturer_delete', {'id': manufacturer.id}) }}"
                                   {% else %}                                 class="inactiveLink" {% endif %} >
                                    <span class="glyphicon glyphicon-minus"></span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    <tr class="formInRow">
                        {{ form_row(formInsert.name) }}
                        {{ form_widget(formInsert.submit, {'label': 'back.action.new', 'attr': {'class': 'btn'} }) }}
                    </tr>
                    <tr class="formInRowError">
                        <td>
                            {{ form_errors(formInsert) }}
                        </td>
                    </tr>
                </tbody>
            </table>
        {{ form_end(formInsert) }}

        <table class="jsStorage" data-type="manufacturer" style="visibility: hidden">
            <tbody>
                {{ form_start(formUpdate, {'action': path('barra_back_manufacturer_update')}) }}
                    <tr class="formInRow">
                        {{ form_row(formUpdate.name) }}
                        {{ form_widget(formUpdate.submit, {'label': 'back.action.update', 'attr': {'class': 'btn'} }) }}
                        {{ form_row(formUpdate.id, {'attr': {'class': 'formPk'} }) }}
                        {{ form_rest(formUpdate) }}
                    </tr>
                {{ form_end(formUpdate) }}
            </tbody>
        </table>

        {{ include('BarraBackBundle::pagination.html.twig', { 'route': 'barra_back_manufacturers'})}}
    </section>
{% endblock %}