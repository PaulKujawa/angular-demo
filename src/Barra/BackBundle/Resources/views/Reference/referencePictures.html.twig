{% extends 'BarraBackBundle::layout.html.twig' %}
{% trans_default_domain "messages" %}

{% block title %}{{ reference.url }}{% endblock %}

{% block section %}
    <section class="container">
        <form name="formReferencePicture" id="dropzoneId" class="dropzone"
              action="{{ path('barra_back_reference_picture_upload') }}" enctype="multipart/form-data" method="post"
                data-removeLink="{{ path('barra_back_reference_picture_delete', {'referenceId': reference.id, 'id': 0}) }}"
                data-getAllLink="{{ path('barra_back_reference_pictures_get', {'referenceId': reference.id}) }}">
            <!--<input type="file"   name="formReferencePicture[file]" id="formReferencePicture_file" class="form-control" required="required">-->
            <input type="hidden" name="formReferencePicture[reference]" id="formReferencePicture_reference" value="{{ reference.id }}">
            {{ form_widget(formReferencePicture._token) }}
            <div class="dz-default dz-message">
                <span class="glyphicon glyphicon-upload"></span>
            </div>
        </form>
    </section>
{% endblock %}