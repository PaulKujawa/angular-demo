{% extends '::base.html.twig' %}

{% block navList %}
    {{ include('BarraBackBundle::nav.html.twig') }}
{% endblock %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite'
        'vendor/jquery-ui/themes/smoothness/jquery-ui.min.css'
        'vendor/bootstrap/dist/css/bootstrap.min.css'
        'vendor/dropzone/dist/min/dropzone.min.css'
        '../app/Resources/public/css/app.css'
        'bundles/barraback/css/backend.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
        'vendor/bootstrap/dist/js/bootstrap.min.js'
        'vendor/dropzone/dist/min/dropzone.min.js'
        'bundles/fosjsrouting/js/router.js'
        '@BarraBackBundle/Resources/public/js/*'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {# controller generated JS file. include in assetic would require a manual dump every time a route changes #}
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}