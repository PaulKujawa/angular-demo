{% trans_default_domain "messages" %}

{% block pagination %}
    {% if pages > 1 %}
        <nav class="paginationNav">
            <ul class="pagination">
                {% if 3 <= paginationActive and pages-2 >= paginationActive %} {# full 5 pages #}
                    {% set from = paginationActive-2 %}
                    {% set until = paginationActive+2 %}

                {% elseif 3 > paginationActive %}
                    {% set from = 1 %}
                    {% set until = min(5, pages) %} {# up to 5 pages from begin #}

                {% else %} {# active page is second last and over 3 #}
                    {% set from = max(1, pages-4) %} {# min 1 #}
                    {% set until = min(paginationActive+2, pages) %} {# max +2 #}
                {% endif %}


                <li {% if 1 == paginationActive %}class="disabled"{% endif %}>
                    <a {% if 1 == paginationActive %} class="disabled" href=""
                    {% else %} href="{{ path(route, {'paginationActive': paginationActive-1}) }}" {% endif %}
                    >
                        <span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span>
                    </a>
                </li>


                {% for i in range(from, until) %}
                    <li {% if paginationActive == i %}class="active"{% endif %}>
                        <a href="{{ path(route, {'paginationActive': i}) }}">
                            {{ i }} <span class="sr-only">(current)</span>
                        </a>
                    </li>
                {% endfor %}


                <li {% if paginationActive == pages %}class="disabled"{% endif %}>
                    <a {% if paginationActive == pages %} class="disabled" href=""
                    {% else %} href="{{ path(route, {'paginationActive': paginationActive+1}) }}" {% endif %}
                    >
                        <span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    {% endif %}
{% endblock %}