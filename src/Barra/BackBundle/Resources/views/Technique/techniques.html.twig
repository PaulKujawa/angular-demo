{% extends 'BarraBackBundle::layout.html.twig' %}
{% form_theme formInsert 'BarraBackBundle:Form:tableRow.html.twig' %}

{% trans_default_domain "messages" %}

{% block title %}{{ 'back.title.techniques'|trans() }}{% endblock %}

{% block section %}
    <section class="container mobileTables">
        {{ form_start(formInsert) }}
            <table class="table table-striped" data-type="techniques">
                <thead>
                    <tr>
                        <th>{{ 'back.technique.name'|trans() }}</th>
                        <th>{{ 'back.technique.description'|trans() }}</th>
                        <th>{{ 'back.technique.url'|trans() }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for technique in techniques %}
                        <tr data-id={{ technique.id }}>
                            <td class="editableCell" data-mobile-title={{ 'back.technique.name'|trans() }}>{{ technique.name }}</td>
                            <td class="editableCell" data-mobile-title={{ 'back.technique.description'|trans() }}>{{ technique.description }}</td>
                            <td class="editableCell" data-mobile-title={{ 'back.technique.url'|trans() }}> {{ technique.url }}
                            <td class="editableCell" data-mobile-title={{ 'back.action.delete'|trans() }}>
                                <a {% if technique.references is empty %} href="{{ path('barra_back_technique_delete', {'id': technique.id}) }}"
                                {% else %}                                class="inactiveLink" {% endif %} >
                                    <span class="glyphicon glyphicon-minus"></span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    <tr class="formInRow">
                        {{ form_row(formInsert.name) }}
                        {{ form_row(formInsert.description) }}
                        {{ form_row(formInsert.url) }}
                        {{ form_widget(formInsert.submit, {'label': 'back.action.new', 'attr': {'class': 'btn'} }) }}
                    </tr>
                    <tr class="formInRowError">
                        <td>
                            {{ form_errors(formInsert) }}
                        </td>
                    </tr>
                </tbody>
            </table>
        {{ form_end(formInsert) }}

