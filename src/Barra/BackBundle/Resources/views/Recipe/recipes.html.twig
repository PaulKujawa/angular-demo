{% extends 'BarraBackBundle::layout.html.twig' %}
{% form_theme form 'BarraBackBundle:Form:tableRow.html.twig' %}
{% trans_default_domain "messages" %}

{% block title %}{{ 'back.title.recipes'|trans() }}{% endblock %}

{% block section %}
    <section class="container mobileTables">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'back.recipe.name'|trans() }}</th>
                <th>{{ 'back.action.manage'|trans() }}</th>
            </tr>
            </thead>
            <tbody>
                {% for recipe in recipes %}
                    <tr>
                        <td data-title={{ 'back.recipe.name'|trans() }}>{{ recipe.name }}</td>
                        <td data-title={{ 'back.action.delete'|trans() }}>
                            <a href="{{ path('barra_back_recipe_delete', {'id': recipe.id}) }}">
                                <span class="glyphicon glyphicon-minus"></span>
                            </a>
                            <a href="{{ path('barra_back_recipe', {'name': recipe.name|replace({' ': '_'})}) }}">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                <tr>
                    {{ form_start(form) }}
                        {{ form_row(form.name) }}
                        {{ form_widget(form.submit, {'label': 'back.action.new', 'attr': {'class': 'btn btn-default'} }) }}
                    {{ form_end(form) }}
                </tr>
            </tbody>
        </table>
    </section>
{% endblock %}