{% extends 'BarraBackBundle::layout.html.twig' %}
{% form_theme form 'BarraBackBundle:Form:tableRow.html.twig' %}
{% trans_default_domain "messages" %}

{% block title %} vPit Recipes {% endblock %}

{% block section %}
    <section id="no-more-tables" class="container">
        {{ form(formNew) }}

        <h1>all recipes</h1>
        <ul>
        {% for recipe in recipes %}
            <li>
                <a href="{{ path('barra_back_recipe', {'id': recipe.id}) }}">{{ recipe.name }}</a>
            </li>
        {% endfor %}
        </ul>
    </section>
{% endblock %}