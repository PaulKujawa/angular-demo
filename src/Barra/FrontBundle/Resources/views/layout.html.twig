{% extends '::base.html.twig' %}

{% block navList %}
    {{ include('BarraFrontBundle:parts:nav.html.twig') }}
{% endblock %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite'
        'vendor/jquery-ui/themes/smoothness/jquery-ui.min.css'
        'vendor/bootstrap/dist/css/bootstrap.min.css'
        '../app/Resources/public/css/app.css'
        'bundles/barrafront/css/*'
    %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
        'vendor/jquery/dist/jquery.min.js'
        'vendor/jquery-ui/jquery-ui.min.js'
        'vendor/lodash/dist/lodash.min.js'
        'vendor/angular/angular.min.js'
        'vendor/restangular/dist/restangular.min.js'
        'vendor/bootstrap/dist/js/bootstrap.min.js'
        'vendor/chartjs/Chart.min.js'
        'bundles/fosjsrouting/js/router.js'
        'bundles/barrafront/js/app.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {# controller generated JS file. include in assetic would require a manual dump every time a route changes #}
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}